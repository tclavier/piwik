piwik-mysql:
  image: mysql:5.6
  volumes:
  - name: piwik-mysql
    path: /var/lib/mysql

piwik:
  image: cbeer/piwik
  hostname: analytics.ut7.fr
  ports:
  - ip: analytics.ut7.fr
    container_port: 9080
    host_port: 80
  volumes:
  - name: piwik-data
    path: /app/config
  links:
  - name: mysql
    alias: piwik-mysql
